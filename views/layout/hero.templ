package layout

templ Hero() {
	<div class={ heroClass() }>
		{ children... }
	</div>
}

css heroClass() {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 100px;
	width: 100%;
	background: linear-gradient(0deg, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(./public/images/header_bg.png);
}
